#include "wronganswer.h"
#include <QDebug>
#include <QLineEdit>
wronganswer::wronganswer(QWidget *parent): QWidget(parent)

{

    b4.setParent(this);
    b4.setText(" 答案错误 ");
    b4.move(50,0);
    b3.setParent(this);
    b3.setText("返回");
    b3.move(50,50);
    connect(&b3, &QPushButton::released, this, &wronganswer::close);
}


